package Cliente;

import java.io.BufferedReader;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.Socket;
import java.util.StringTokenizer;

import Herramientas.Consola;
import Herramientas.Valida;

public class Cliente{

	private Socket soc;
	public Cliente(String ipServer, int puerto){
		try
		{
			soc = new Socket(ipServer,1000);
			CRecibe rcv = new CRecibe("recibir");
			CSend snd = new CSend("enviar");
			
			
		}
		catch(Exception e){
			
		}
	}
	
	public static void main(String args[]) throws IOException {

		String puerto;
		String ip;
		String nick;
		BufferedReader buffer = new BufferedReader( new InputStreamReader(System.in) );
		
		do 
		{
			System.out.print("Ingrese IP del Servidor >:");
			ip = buffer.readLine();
		}
		while(!Valida.validateIP(ip));		
		do 
		{
			System.out.print("Puerto >:");
			puerto = buffer.readLine();
			
		}
		while(!Valida.validaPuerto(puerto));

		Cliente cliente = new Cliente(ip, Integer.parseInt(puerto));
		
		//cliente.preguntarUsuariosConectados();
		//System.out.println("Actualmente en la sala se encuentran: ");
		
		System.out.print("Ingrese su NICK >:");
		nick = buffer.readLine().replaceAll(" ","");
		buffer.close();
		System.out.print(nick);
		System.out.println(">");
		
	}
}
