package Cliente;

import java.io.BufferedReader;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.Socket;
import java.util.StringTokenizer;

import Herramientas.Consola;
import Herramientas.Valida;

public class Cliente{

	private Socket soc;
	public Cliente(String ipServer, int puerto){
		try
		{
			soc = new Socket(ipServer,puerto);			
			CRecibe rcv = new CRecibe("recibir",new DataInputStream(soc.getInputStream()));
			CSend snd = new CSend("enviar",new DataOutputStream(soc.getOutputStream()));
			rcv.start();
			snd.start();
			snd.wait();
			rcv.salir();
			
			
		}
		catch(Exception e){
			
		}
	}
	
	public static void main(String args[]) throws IOException {

		String puerto;
		String ip;
		BufferedReader buffer = new BufferedReader( new InputStreamReader(System.in) );
		
		do 
		{
			System.out.print("Ingrese IP del Servidor >:");
			ip = buffer.readLine();
		}
		while(!Valida.validateIP(ip));		
		do 
		{
			System.out.print("Puerto >:");
			puerto = buffer.readLine();
			
		}
		while(!Valida.validaPuerto(puerto));

		Cliente cliente = new Cliente(ip, Integer.parseInt(puerto));
		
	}
}
