package grafo.generadores;

import grafo.Grafo;

public class GeneradorRegularConGrado {
	public static Grafo generar(int cantidadDeNodos,int grado){
		Grafo grafo = new Grafo(cantidadDeNodos);
		
		if(cantidadDeNodos % 2 == 0 && grado % 2 == 1)
		{
			
			//NO FUNCIONA BIEN
			if(cantidadDeNodos == 2)
				grafo.addArista(0, 1, true);
			else{
				int saltoImpar = (cantidadDeNodos / 2);
				for (int i = 0; i < saltoImpar; i++)
					for(int j=i+1; j < saltoImpar; j++)
						grafo.addArista(i, j, true);
			}
		}
		else
		{
			int saltoNodo = 1;
			for (int i = 0; i < grado / 2; i++) {
				for (int j=0; j < cantidadDeNodos; j++) {
						int destino =(j + saltoNodo) % cantidadDeNodos;
							grafo.addArista( j,destino, true);
				}
				saltoNodo++;
			}
			
		}
		
		return grafo;
	}
}
